pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'docker build -t mydockerhub/user:v1 user-service/ && docker push mydockerhub/user:v1'
                sh 'docker build -t mydockerhub/user:v1 user-service/ && docker push mydockerhub/product:v1'
                sh 'docker build -t mydockerhub/user:v1 user-service/ && docker push mydockerhub/order:v1'
            }
        }
        stage('Deploy') {
            steps {
                sh 'kubectl apply -f k8s/'
            }
        }
    }
}